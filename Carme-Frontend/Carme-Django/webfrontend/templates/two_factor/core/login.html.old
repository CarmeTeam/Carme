{% extends "two_factor/_base.html" %}
{% load i18n %}
{% load static %}

{% block subcontent %}

<div class="row flex-center-carme align-middle min-vh-85 py-4">
	<div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
		<div id="login-box">
  	
			<!-- <row> -->
			<div class="row">

				<div class="col-12">
					<div class="text-center my-4">
						<img class="mb-4" src="/static/img/carme.svg" alt="logo" />
						<h5 class="fs-6 fw-600 text-900">Carme</h5> 
					</div>
                            
					<div id="timeout-message" class="alert alert-warning py-2" role="alert" style="display: none;">
						<i class="fas fa-warning"></i>&nbsp; Your session has expired! Log in again.
					</div>
					<div id="logout-message" class="alert alert-success py-2" role="alert" style="display: none;">
						<i class="fas fa-check"></i>&nbsp; Successfully logged out.
					</div>
					{% if form.errors %}
    	<div id="error-message" class="alert alert-danger py-2" role="alert">
						<i class="fas fa-times-circle"></i>&nbsp; Incorrect information. Please Try again.
					</div>
					{% endif %}
    </div>


    <!-- <2FA> -->
    <form action="" class="col-12" method="post">
    	{% csrf_token %}

    	{% include "two_factor/_wizard_forms.html" %}
              
    	{# hidden submit button to enable [enter] key #}
    	<input type="submit" value="" class="d-none" />

     {% if wizard.steps.current == 'auth' %}
     	{% comment %} <p>{% blocktrans %}Enter your credentials.{% endblocktrans %}</p> {% endcomment %}
					{% elif wizard.steps.current == 'token' %}
     	
						{% if device.method == 'call' %}
      	<p>
								{% blocktrans trimmed %}
									We are calling your phone right now, please enter the digits you hear.
								{% endblocktrans %}
							</p>
      {% elif device.method == 'sms' %}
      	<p>
								{% blocktrans trimmed %}
									We sent you a text message, please enter the tokens we sent.
								{% endblocktrans %}
							</p>
      {% else %}
      	{% comment %}<p>{% blocktrans trimmed %}Enter the tokens generated by your token
       generator.{% endblocktrans %}</p> {% endcomment %}
      {% endif %}
     {% elif wizard.steps.current == 'backup' %}
     	<p>
							{% blocktrans trimmed %}
								Use this form for entering backup tokens for logging in.
        These tokens have been generated for you to print and keep safe. Please
        enter one of these backup tokens to login to your account.
							{% endblocktrans %}
						</p>
     {% endif %}

     

     {% if backup_tokens %}
     	<p>{% trans "As a last resort, you can use a backup token:" %}</p>
      <p>
      	<button name="wizard_goto_step" type="submit" value="backup" class="btn btn-secondary btn-block w-100">
								{% trans "Use Backup Token" %}
							</button>
      </p>
     {% endif %}
              
     {% include "two_factor/_wizard_actions.html" %}
    </form>
    <!-- </2FA> -->

			</div>
			<!-- </row> -->

   <div class="row mb-5 mt-3">
				<div class="col">
					<a href="https://www.itwm.fraunhofer.de/" target="_blank"><img src="/static/img/logo/itwm.svg" alt="logo" style="width: 100%;" /></a>
				</div>
				<div class="col">
					<a href="https://www.bmbf.de/" target="_blank"><img src="/static/img/logo/bmbf.svg" alt="logo" style="width: 100%;" /></a>
				</div>
				<div class="col">
					<a href="https://mbwwk.rlp.de/" target="_blank"><img src="/static/img/logo/rlp.svg" alt="logo" style="width: 100%;" /></a>
				</div>
			</div> 


		    </div>
    </div>
  </div>

  
{% endblock %}

