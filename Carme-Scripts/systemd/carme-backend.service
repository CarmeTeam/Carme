[Unit]
Description=Carme Backend
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
Environment=PYTHONUNBUFFERED=1
ExecStart=[PATH_TO_PYTHON_ENV]/carme-backend /opt/Carme/Carme-Backend/CarmeConfig.backend

Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target
